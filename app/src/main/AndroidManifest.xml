<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="yy.hao.com.testphonemvp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:name=".app.MyApp"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"

        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.PhoneActivity" />
        <activity android:name=".view.MainActivity"
            android:theme="@style/MainTheme"
            />
        <activity android:name=".view.design.CoordinatorLayoutActivity"

            />
        <activity android:name=".view.design.CoordActivityOneActivity" />
        <activity android:name=".view.design.CoordActivityThreeActivity" />
        <activity android:name=".view.design.CoordActivityFourActivity" />
        <activity android:name=".view.design.CoordActivityFiveActivity" />
        <activity android:name=".view.design.TextInputActivity" />
        <activity android:name=".view.NewsActivity" />
        <!--钟表-->
        <activity android:name=".view.WatchActivity"
            android:theme="@style/MainTheme"
            />
    </application>

</manifest>